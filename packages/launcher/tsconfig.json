{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
