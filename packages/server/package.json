{
  "name": "local-dev-proxy-server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "startwithbuild": "npm run build && node dist/server.js",
    "merge-tsconfig": "json-merger ../../tsconfig.json tsconfig.json > tsconfig.docker.json",
    "dev": "STORAGE=file concurrently \"npx tsc --watch\" \"nodemon -q index.js\"",
    "build": "tsc",
    "build:docker": "tsc -p tsconfig.docker.json",
    "docker:build:test": "docker build . -t local-dev-proxy-test:latest",
    "docker:run:test": "docker rm -f local-dev-proxy-test && docker run -d --name local-dev-proxy-test -p 8080:8080 local-dev-proxy-test:latest"
  },
  "keywords": [],
  "author": "배창원",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "http-proxy": "^1.18.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/http-proxy": "^1.17.11",
    "concurrently": "^8.2.1",
    "json-merger": "^1.1.10",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2"
  },
  "description": ""
}
